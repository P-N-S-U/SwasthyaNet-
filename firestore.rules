rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, list: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if false;
    }

    match /appointments/{appointmentId} {
      allow read: if request.auth != null 
        && (request.auth.uid == resource.data.patientId 
        || request.auth.uid == resource.data.doctorId);
      allow create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.doctorId;
      allow delete: if false;
    }
    
    match /calls/{callId} {
      allow read, write: if request.auth != null;
    }

    match /calls/{callId}/{subcollection}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /partners/{partnerId} {
      // Public data like name, address, type can be read by any authenticated user
      allow read: if request.auth != null;
      // Only the partner owner can create or update their own document
      allow create: if request.auth.uid == partnerId;
      allow update: if request.auth.uid == resource.data.ownerUID;
      // No one can delete partner documents through the client
      allow delete: if false;
    }

    match /prescriptions/{prescriptionId} {
      // A patient can read a prescription if it's theirs.
      // A doctor can read it if they wrote it OR if they are the doctor for the linked appointment (to check for existence).
      allow get: if request.auth != null && 
        (
          (exists(path(resource.path)) && (request.auth.uid == resource.data.patientId || request.auth.uid == resource.data.doctorId)) ||
          (get(/databases/$(database)/documents/appointments/$(prescriptionId)).data.doctorId == request.auth.uid)
        );

      // A patient can list their own prescriptions. A doctor can list prescriptions they've issued.
      allow list: if request.auth != null && 
        (
          (request.query.filters.size() > 0 && request.query.filters[0][0] == 'patientId' && request.query.filters[0][2] == request.auth.uid) ||
          (request.query.filters.size() > 0 && request.query.filters[0][0] == 'doctorId' && request.query.filters[0][2] == request.auth.uid)
        );

      // Only the doctor who is creating the prescription can write it.
      // The doctorId in the new document must match the authenticated user's UID.
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.doctorId;

      // Prescriptions are part of the medical record and should not be deleted.
      allow delete: if false;
    }
  }
}
